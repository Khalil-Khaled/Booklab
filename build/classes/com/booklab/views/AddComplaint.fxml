<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" pickOnBounds="false" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.booklab.views.AddComplaintController">
   <children>
      <Label layoutX="300.0" layoutY="51.0" text="ADD COMPLAINT" textAlignment="CENTER">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <TextField fx:id="tfTopic" layoutX="224.0" layoutY="155.0" prefHeight="40.0" prefWidth="220.0" promptText="Topic of complaint " />
      <TextArea fx:id="tfComplaintDetails" layoutX="224.0" layoutY="234.0" prefHeight="132.0" prefWidth="220.0" promptText="Please add complaint details " />
      <Button fx:id="submitId" layoutX="300.0" layoutY="516.0" mnemonicParsing="false" onAction="#addComplaint" text="Submit">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </Button>
      <Label layoutX="237.0" layoutY="402.0" text="Type of complaint :" />
      <RadioButton fx:id="offerId" layoutX="224.0" layoutY="445.0" mnemonicParsing="false" text="Offer">
         <toggleGroup>
            <ToggleGroup fx:id="complaintType" />
         </toggleGroup>
      </RadioButton>
      <RadioButton fx:id="orderId" layoutX="334.0" layoutY="445.0" mnemonicParsing="false" text="Order" toggleGroup="$complaintType" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</AnchorPane>

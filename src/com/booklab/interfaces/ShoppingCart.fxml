      <TableView fx:id="list_cart" layoutY="55.0" prefHeight="289.0" prefWidth="713.0">
        <columns>
          <TableColumn fx:id="article" prefWidth="399.0" text="Article" />
          <TableColumn fx:id="quantity" prefWidth="151.0" text="Quantity" />
            <TableColumn fx:id="total" minWidth="0.0" prefWidth="162.0" text="Total" />
        </columns>
      </TableView>
      <Label layoutX="20.0" layoutY="14.0" style="-fx-font-weight: 300;" text="Shopping Cart">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <Button fx:id="order_btn" layoutX="532.0" layoutY="360.0" mnemonicParsing="false" text="Order Now!" />
      <Button fx:id="cancel_btn" layoutX="627.0" layoutY="360.0" mnemonicParsing="false" text="Cancel" />
   </children>
</AnchorPane>
